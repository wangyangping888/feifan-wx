/* components/rili/rili.wxss */
.flex-item{
  flex: 1;
}
.flex{
  display: flex;
}
.rili{
  text-align: center;
  background-color:#eee; 
  
}
.year-month{
  background-color: #0086ff;
  color: white;
  font-weight: bold;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  position: relative;
}
.date{
  padding-top: 10rpx;
}
.title{
  font-size: 40rpx;
  line-height: 80rpx;
}
.rili .current{
  color: black;
} 
.rili .todo .dot{
  display: block;
  background-color:#0086ff;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}
.day{
  position: relative;
  padding:10rpx;
  color: #999;
  min-height: 70rpx;
  line-height: 70rpx;

}
.pre{
  position: absolute;
  left: 50rpx;
  top: 20rpx;
}
.next{
  position: absolute;
  right: 50rpx;
  top: 20rpx;
}
.rili .today{
  color: #0086ff;
}
.rili .selected{
  border-radius: 50%;
  background-color: #0086ff;
  color: #fff !important;
}
